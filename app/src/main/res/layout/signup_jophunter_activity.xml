<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basecolor"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/backgroundcolor">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="15sp"
            android:text="구직자 회원가입"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/sign_logo" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="가입 항목을 입력해 주세요. 모두 기입하셔야 합니다. 해당 항목을 꼼꼼히 작성해주세요. 미풍양속 위반 닉네임은 재제될 수 있습니다."
                        android:textColor="#6f6e6e"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical">


                    <!-- 닉네임 나이  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="15dp"
                                android:layout_marginRight="5dp"
                                android:background="@android:color/transparent"
                                android:gravity="bottom|left"
                                android:hint="닉네임을 입력하세요. (최대 8글자)"
                                android:maxLength="8"
                                android:paddingLeft="15dp"
                                android:singleLine="true"
                                android:textColor="#000000"
                                android:textColorHint="#b2b2b2"
                                android:textSize="@dimen/edit_size" />

                        </LinearLayout>

                        <!-- 위라인 -->
                        <LinearLayout
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="20dp"
                            android:background="#ababab">

                        </LinearLayout>
                        <!-- 위라인 -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1.8">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/text_age"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center|bottom"
                                    android:hint="나이"
                                    android:paddingRight="10dp"
                                    android:textColorHint="@color/hintcolor"
                                    android:textSize="@dimen/edit_size" />

                                <LinearLayout
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/pinkbox_round"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/icon_arrow" />


                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <!-- 라인  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#ababab"></LinearLayout>
                    <!-- 라인  -->


                    <!-- 성별  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="15dp"
                                android:gravity="center|bottom|left"
                                android:paddingLeft="15dp"
                                android:text="성별(선택)"
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/edit_size"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="15dp"
                                    android:gravity="center|bottom"
                                    android:paddingLeft="15dp"
                                    android:text="남자"
                                    android:textColor="@color/man"
                                    android:textSize="@dimen/edit_size" />


                                <CheckBox
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/chackbox_1"
                                    android:button="@android:color/transparent" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="15dp"
                                        android:gravity="center|bottom"
                                        android:paddingLeft="15dp"
                                        android:text="여자"
                                        android:textColor="@color/girl"
                                        android:textSize="@dimen/edit_size" />


                                    <CheckBox
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/chackbox_2"
                                        android:button="@android:color/transparent" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <!-- 라인  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#ababab"></LinearLayout>
                    <!-- 라인  -->

                    <!-- 시도 군구  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="15dp"
                                android:gravity="center|bottom"
                                android:text="시도"
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/edit_size"
                                android:textStyle="bold" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="15dp"
                                android:layout_marginRight="5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:gravity="center|bottom"
                                    android:hint="선택"
                                    android:paddingRight="15dp"
                                    android:textColor="@color/textcolor"
                                    android:textColorHint="@color/textcolor"
                                    android:textSize="@dimen/edit_size" />

                                <LinearLayout
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/pinkbox_round"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/icon_arrow" />


                                </LinearLayout>

                            </RelativeLayout>


                        </LinearLayout>

                        <!-- 위라인 -->
                        <LinearLayout
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="20dp"
                            android:background="#ababab">

                        </LinearLayout>
                        <!-- 위라인 -->


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="15dp"
                                android:layout_marginLeft="5dp"
                                android:gravity="center|bottom"
                                android:text="군구"
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/edit_size"
                                android:textStyle="bold" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="15dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:gravity="center|bottom"
                                    android:hint="선택"
                                    android:paddingRight="15dp"
                                    android:textColor="@color/textcolor"
                                    android:textColorHint="@color/textcolor"
                                    android:textSize="@dimen/edit_size" />

                                <LinearLayout
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/pinkbox_round"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/icon_arrow" />
                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <!-- 라인  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#ababab"></LinearLayout>
                    <!-- 라인  -->

                    <!-- 희망 업종  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp"
                            android:gravity="center|bottom"
                            android:text="희망업종"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/edit_size"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:gravity="center|bottom"
                                android:hint="선택"
                                android:paddingRight="10dp"
                                android:textColor="@color/textcolor"
                                android:textColorHint="@color/textcolor"
                                android:textSize="@dimen/edit_size" />


                            <LinearLayout
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/pinkbox_round"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/icon_arrow" />
                            </LinearLayout>

                        </RelativeLayout>


                    </LinearLayout>

                    <!-- 라인  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#ababab"></LinearLayout>
                    <!-- 라인  -->

                    <!-- 한마디  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp"
                            android:gravity="center|bottom"
                            android:text="한마디"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/edit_size"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp">


                            <LinearLayout
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/pinkbox_round"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/icon_arrow" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center|bottom"
                                android:hint="일자리 구하러 왔어요~"
                                android:paddingRight="19dp"
                                android:textColor="@color/textcolor"
                                android:textColorHint="@color/textcolor"
                                android:textSize="@dimen/edit_size"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:id="@+id/textView4" />

                        </RelativeLayout>

                    </LinearLayout>

                    <!-- 라인  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#ababab"></LinearLayout>
                    <!-- 라인  -->

                    <!-- 경고 문구  -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left|bottom"
                            android:text="※밤엔알바는 익명성 어플로 고객님의 정보를 저장하지 않습니다. 어플에서 이루어지는 이용약관 위반 내용의 손해는 책임이 없음을 알려드립니다."
                            android:textColor="@color/textcolor"
                            android:textSize="13sp"
                            android:id="@+id/textView5" />

                    </LinearLayout>

                </LinearLayout>

                <!-- 이용약관 동의 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <CheckBox
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/chackbox_2"
                            android:button="@android:color/transparent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:text="이용약관 동의"
                            android:textColor="@color/backgroundcolor"
                            android:textStyle="bold"
                            android:id="@+id/textView7" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <CheckBox
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/chackbox_2"
                            android:button="@android:color/transparent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:text="위치정보 취급방침 동의"
                            android:textColor="@color/backgroundcolor"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

    </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="bottom">

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@color/btn1">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="회원가입 완료"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_marginLeft="6dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_ok"/>

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>