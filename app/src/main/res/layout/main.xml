<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basecolor">
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/backgroundcolor">

        <!-- 구인정보 -->
        <LinearLayout
            android:onClick="click_main_tab1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/main_tab1_background"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#f23679"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/main_tab1_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_tab1_1" />

                <TextView
                    android:id="@+id/main_tab1_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="구인정보"
                    android:textSize="14sp"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_tab1_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:background="#dd1d61"
                android:orientation="vertical">
            </LinearLayout>

        </LinearLayout>
        <!-- 구인정보 END -->


        <!-- 인재정보 -->
        <LinearLayout
            android:onClick="click_main_tab2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/main_tab2_background"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#00000000"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/main_tab2_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_tab2_2" />

                <TextView
                    android:id="@+id/main_tab2_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="인재정보"
                    android:textSize="14sp"
                    android:textColor="#70ffffff"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/main_tab2_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:background="#dd1d61"
                android:orientation="vertical">
            </LinearLayout>


        </LinearLayout>
        <!-- 인재정보 END -->


        <!-- 등록하기 -->
        <LinearLayout
            android:onClick="click_main_tab3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/main_tab3_background"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#00000000"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/main_tab3_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_tab3_2" />

                <TextView
                    android:id="@+id/main_tab3_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="등록하기"
                    android:textSize="14sp"
                    android:textColor="#70ffffff"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/main_tab3_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:background="#dd1d61"
                android:orientation="vertical">
            </LinearLayout>

        </LinearLayout>
        <!-- 등록하기 END -->


        <!-- 쪽지함 -->
        <LinearLayout
            android:onClick="click_main_tab4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/main_tab4_background"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#00000000"
                android:layout_weight="1">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <RelativeLayout
                            android:paddingTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/main_tab4_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:src="@drawable/icon_tab4_2" />

                        <TextView
                            android:layout_below="@+id/main_tab4_icon"
                            android:id="@+id/main_tab4_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:text="쪽지함"
                            android:textColor="#70ffffff"
                            android:textSize="14sp" />


                            <!-- 알림 카운트 -->
                            <LinearLayout
                                android:layout_alignParentTop="true"
                                android:layout_width="match_parent"
                                android:layout_height="16dp">

                                <TextView
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="25dp"
                                    android:layout_height="match_parent"
                                    android:textSize="12sp"
                                    android:textColor="#f4e034"
                                    android:text="99"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:background="@drawable/tab_alert_round"/>

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/main_tab4_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:background="#dd1d61"
                android:orientation="vertical">
            </LinearLayout>

        </LinearLayout>
        <!-- 쪽지함 END -->

        <!-- 더보기 -->
        <LinearLayout
            android:onClick="click_main_tab5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/main_tab5_background"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#00000000"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/main_tab5_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_tab5_2" />

                <TextView
                    android:id="@+id/main_tab5_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="더보기"
                    android:textSize="14sp"
                    android:textColor="#70ffffff" />

            </LinearLayout>

            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/main_tab5_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:background="#dd1d61"
                android:orientation="vertical">
            </LinearLayout>

        </LinearLayout>
        <!-- 더보기 END -->

    </LinearLayout>

</LinearLayout>