<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unchecked -->
    <item android:state_checked="false">
        <shape>
            <stroke
                android:width="1dip"
                android:color="#e61c70" />
            <corners android:radius="3dip"/>
            <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp" />
        </shape>
    </item>
    <!-- Checked -->
    <item android:state_checked="true">
        <layer-list>
            <!-- 배경 -->
            <item>
                <shape>
                    <stroke
                        android:width="1dip"
                        android:color="#e61c70" />
                    <corners android:radius="3dip"/>
                    <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp" />
                </shape>
            </item>
            <!-- 이미지 영역 -->
            <item android:drawable="@drawable/icon_chack" android:top="4dp" android:right="4dp" android:bottom="4dp" android:left="4dp" />
        </layer-list>
    </item>

</selector>


